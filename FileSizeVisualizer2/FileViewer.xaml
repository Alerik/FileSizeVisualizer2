<UserControl x:Class="FileSizeVisualizer2.FileViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileSizeVisualizer2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Button Background="AliceBlue" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Click="Button_Click" Height="40">
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="5*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="40"/>
			</Grid.ColumnDefinitions>
			<TextBlock Name="filePath"/>
			<TextBlock Name="fileSize" Grid.Column="1"/>
			<Image Name="iconImage" Grid.Column="2" />
		</Grid>
	</Button>
</UserControl>
